{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",                
    "outDir": "dist",              
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,

    // ⬇️ ЭНЭ ХОЁРЫГ НЭМ
    "types": ["node", "express", "bcryptjs", "dotenv", "jsonwebtoken", "multer", "cors"]
  },
  "include": ["**/*.ts"],        
  "exclude": ["node_modules", "dist"]
}
